<h1>Teams</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Ladder</th>
      <th>Points</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
    <tr>
      <td><%= link_to team.name, team %></td>
      <td><%= team.ladder_rank %></td>
      <td><%= team.points %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Team', new_team_path %>
<%= link_to 'New Game', new_game_path %>
